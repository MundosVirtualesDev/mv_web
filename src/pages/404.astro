---
import PageLayout from "../layouts/PageLayout.astro";
import Container from "../components/ui/Container.astro";
import Button from "../components/ui/Button.astro";
---
<PageLayout title="No encontrado | Mundos Virtuales" description="Página no encontrada.">
  <section class="page-hero">
    <Container>
      <h1 class="h1">404</h1>
      <p class="p">La página que buscas no existe.</p>
      <div style="margin-top:16px;">
        <Button href="/" variant="primary" tone="yellow">Volver al inicio</Button>
      </div>
    </Container>
  </section>
</PageLayout>
