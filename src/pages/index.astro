---
import PageLayout from "../layouts/PageLayout.astro";
import Hero from "../components/home/Hero.astro";
import AreaTiles from "../components/home/AreaTiles.astro";
import AreasContent from "../components/home/AreasContent.astro";
import ContactSection from "../components/home/ContactSection.astro";
import FooterMV from "../components/home/FooterMV.astro";
---

<PageLayout title="Mundos Virtuales | Automatización Industrial y Gestión del Efectivo">
  <Hero />
  <AreaTiles />
  <AreasContent />
  <ContactSection />
  <FooterMV />

  <script>
    import { mountReveal } from "../scripts/reveal";
    import { mountContactGuard } from "../scripts/contact-guard";

    mountReveal();
    mountContactGuard({
      formSelector: "#mv-contact-form",
      honeypotName: "website",
      minSecondsBetweenSends: 25
    });
  </script>
</PageLayout>
