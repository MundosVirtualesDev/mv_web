---
import PageLayout from "../../layouts/PageLayout.astro";
import FooterMV from "../../components/home/FooterMV.astro";
import FilterBar from "../../components/projects/FilterBar.astro";
import ProjectCard from "../../components/projects/ProjectCard.astro";
import { projects } from "../../data/projects";

const url = new URL(Astro.request.url);
const area = url.searchParams.get("area") ?? "all";

const filtered = area === "all"
  ? projects
  : projects.filter(p => p.area === area);
---

<PageLayout title="Proyectos | Mundos Virtuales">
  <section class="section">
    <div class="container">
      <header class="head" data-reveal>
        <span class="pill">Proyectos</span>
        <h1>Casos y soluciones implementadas</h1>
        <p class="p">
          Una selección de implementaciones y entregables típicos. Podemos ajustar el alcance según tu operación.
        </p>
      </header>

      <FilterBar current={area} />

      <div class="grid">
        {filtered.map((p) => <ProjectCard project={p} />)}
      </div>
    </div>
  </section>

  <FooterMV />

  <script>
    import { mountReveal } from "../../scripts/reveal";
    mountReveal();
  </script>

  <style>
    .head{ margin-bottom: 8px; }
    .pill{
      display:inline-flex;
      padding:.35rem .7rem;
      border-radius:999px;
      font-weight:900;
      font-size:.85rem;
      letter-spacing:.3px;
      background: rgba(0,0,0,.04);
      border:1px solid rgba(0,0,0,.08);
      margin-bottom: 10px;
    }
    h1{
      margin:0 0 10px 0;
      font-size: clamp(1.7rem, 2.6vw, 2.4rem);
      line-height:1.05;
      letter-spacing:.2px;
      font-weight: 900;
    }
    .grid{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 18px;
    }
    @media (max-width: 980px){
      .grid{ grid-template-columns: 1fr; }
    }
  </style>
</PageLayout>
