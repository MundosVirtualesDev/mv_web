---
/**
 * Props:
 * - title: string
 * - subtitle?: string
 * - tone: "yellow" | "blue"
 * - image?: string (url in /public)
 */
const {
  title,
  subtitle,
  tone = "yellow",
  image = "/img/area-hero.jpg",
} = Astro.props;

const isYellow = tone === "yellow";
const chipBg = isYellow ? "rgba(254,209,0,.22)" : "rgba(82,116,217,.18)";
const chipText = "rgba(13,13,13,.84)";
---

<section class="areaHero">
  <div class="areaHero__bg" style={`background-image:url(${image})`}>
    <div class="container areaHero__inner">
      <div class="areaHero__card card" data-reveal>
        <span class="chipArea" style={`background:${chipBg}; color:${chipText}; border-color: rgba(0,0,0,.08);`}>
          {isYellow ? "Automatización Industrial y Robótica" : "Gestión del Efectivo"}
        </span>
        <h1>{title}</h1>
        {subtitle && <p class="sub">{subtitle}</p>}
        <div class="actions">
          <a class={"btn " + (isYellow ? "btn-yellow" : "btn-blue")} href="/#contacto">COTIZAR</a>
          <a class="btn" href="/#contacto" style={`border-color: rgba(0,0,0,.14); background:#fff;`}>HABLAR CON UN EXPERTO</a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .areaHero__bg{
      min-height: clamp(360px, 52vh, 540px);
      background-size: cover;
      background-position: center;
      position: relative;
      border-bottom: 1px solid rgba(0,0,0,.08);
    }
    .areaHero__bg::before{
      content:"";
      position:absolute; inset:0;
      background: linear-gradient(90deg, rgba(0,0,0,.60) 0%, rgba(0,0,0,.20) 60%, rgba(0,0,0,.08) 100%);
    }
    .areaHero__inner{
      position:relative;
      min-height: inherit;
      display:flex;
      align-items:center;
      padding: 26px 0;
    }
    .areaHero__card{
      width: min(760px, 100%);
      padding: 22px;
      background: rgba(255,255,255,.95);
      backdrop-filter: blur(10px);
      border:1px solid rgba(0,0,0,.06);
      box-shadow: 0 18px 44px rgba(0,0,0,.18);
    }
    .chipArea{
      display:inline-flex;
      padding:.35rem .7rem;
      border-radius:999px;
      font-weight:900;
      font-size:.85rem;
      letter-spacing:.3px;
      border:1px solid rgba(0,0,0,.12);
      margin-bottom: 10px;
    }
    h1{
      margin:0 0 10px 0;
      font-size: clamp(1.7rem, 2.6vw, 2.5rem);
      line-height: 1.05;
      letter-spacing: .2px;
      font-weight: 900;
      color: var(--mv-black);
    }
    .sub{
      margin:0 0 14px 0;
      line-height:1.65;
      color: rgba(13,13,13,.78);
      font-weight: 600;
    }
    .actions{
      display:flex;
      flex-wrap:wrap;
      gap:10px;
      padding-top: 2px;
    }
    @media (max-width: 820px){
      .areaHero__bg::before{
        background: linear-gradient(180deg, rgba(0,0,0,.58) 0%, rgba(0,0,0,.18) 70%, rgba(0,0,0,.08) 100%);
      }
      .areaHero__card{ padding: 18px; }
    }
  </style>
</section>
