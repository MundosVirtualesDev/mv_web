---
const {
  href,
  variant = "primary", // primary | secondary | ghost
  tone = "neutral",    // neutral | yellow | blue
  type = "button",
} = Astro.props;

const base = "btn";
const v = `btn--${variant}`;
const t = `btn--${tone}`;
---
{href ? (
  <a class={`${base} ${v} ${t}`} href={href}><slot /></a>
) : (
  <button class={`${base} ${v} ${t}`} type={type}><slot /></button>
)}

<style>
  .btn{
    display:inline-flex; align-items:center; justify-content:center;
    gap:10px;
    padding: 12px 16px;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.92);
    transition: transform .15s ease, background .15s ease, border-color .15s ease;
    font-weight: 600;
    letter-spacing: .01em;
  }
  .btn:hover{ transform: translateY(-1px); border-color: rgba(255,255,255,.22); background: rgba(255,255,255,.09); }
  .btn:active{ transform: translateY(0px); }

  .btn--primary.btn--yellow { background: rgba(254,209,0,.12); border-color: rgba(254,209,0,.35); }
  .btn--primary.btn--yellow:hover { background: rgba(254,209,0,.16); }

  .btn--primary.btn--blue { background: rgba(82,116,217,.14); border-color: rgba(82,116,217,.35); }
  .btn--primary.btn--blue:hover { background: rgba(82,116,217,.18); }

  .btn--secondary { background: rgba(255,255,255,.05); }

  .btn--ghost { background: transparent; border-color: rgba(255,255,255,.12); }
</style>
