---
const { tone = "neutral" } = Astro.props; // neutral | yellow | blue
---
<span class={`chip chip--${tone}`}><slot /></span>

<style>
  .chip{
    display:inline-flex;
    align-items:center;
    padding: 7px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    font-size: 13px;
    color: rgba(255,255,255,.82);
  }
  .chip--yellow{ border-color: rgba(254,209,0,.35); background: rgba(254,209,0,.10); }
  .chip--blue{ border-color: rgba(82,116,217,.35); background: rgba(82,116,217,.12); }
</style>
