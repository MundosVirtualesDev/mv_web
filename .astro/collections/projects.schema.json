{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "area": {
          "type": "string",
          "enum": [
            "automatizacion",
            "efectivo"
          ]
        },
        "excerpt": {
          "type": "string",
          "minLength": 20,
          "maxLength": 240
        },
        "coverImage": {
          "type": "string"
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 12
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 20,
          "default": []
        },
        "serviceRefs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 8
        },
        "client": {
          "type": "string"
        },
        "industry": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "area",
        "excerpt",
        "coverImage",
        "tags"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}